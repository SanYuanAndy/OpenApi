<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_main_bg"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.openapi.alldemo.MultiThemeActivity">

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="切换主题"
        android:textColor="@color/theme_main_text_color"
        android:onClick="onThemeChange"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <ImageView
        android:id="@+id/icon0"
        android:background="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/theme_ic_launcher"/>

    <com.openapi.comm.utils.MarqueeTextView
        android:id="@+id/tv_auto_scroll"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="你好小T, 你知道今天天气怎么样吗?请查一下哦"
        android:clickable="true"
        android:textSize="32sp"
        android:textColor="@color/theme_main_text_color">
    </com.openapi.comm.utils.MarqueeTextView>

</LinearLayout>